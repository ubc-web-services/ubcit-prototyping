                <option value="search_api_relevance" selected="selected">Relevance</option>
                <option value="title">Alphabetical</option>
              </select>
            </div>
          </div>
          <div class="sort-button"><button type="submit" name="" value="go" class="btn btn-small form-submit">Sort Results</button></div>
        </div>
      </div>
    </form>
  </div>
</section>
