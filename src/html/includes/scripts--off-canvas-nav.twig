<script>
/* Primary Nav Toggle */
var pushTrigger = document.getElementsByClassName("nav-toggle--primary");
var pushPanel = document.getElementById("nav-panel--primary");
var pushContent = document.getElementById("pushed-content");
var pushMask = document.getElementById("off-canvas-mask");
var i;
for (i = 0; i < pushTrigger.length; i++) {
  pushTrigger[i].addEventListener("click", function() {
      document.body.classList.toggle("nav-panel--primary-is-active");
      pushPanel.classList.toggle("nav-panel--primary-is-active");
      pushContent.classList.toggle("nav-panel--primary-is-active");
      pushMask.classList.toggle("nav-panel--primary-is-active");
  });
}

</script>
